<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash_screen"
    tools:context="oliverdev.com.blogradio.activities.SplashScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/linearLayout.background.splash_screen"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBlogRadioTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview.top.margin.blog_radio_title"
            android:padding="@dimen/textview.padding.blog_radio_title"
            android:text="@string/textview.text.blog_radio"
            android:textSize="@dimen/textview.textsize.blog_radio_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvShowYourFeelsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview.margin.top.show_your_feels"
            android:paddingBottom="@dimen/textview.padding.bottom.show_your_feels"
            android:paddingLeft="@dimen/textview.padding.left.show_your_feels"
            android:paddingTop="@dimen/textview.padding.top.show_your_feels"
            android:text="@string/textview.text.show_your_feels"
            android:textSize="@dimen/textview.textsize.show_your_feels"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvConfessionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview.margin.top.confession"
            android:padding="@dimen/textview.padding.confession"
            android:text="@string/textview.text.confession"
            android:textSize="@dimen/textview.textsize.confession" />

        <ProgressBar
            android:id="@+id/progressBarSplashScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="@dimen/progressbar.top.margin"
            android:indeterminateDrawable="@drawable/splash_screen_loader" />
    </LinearLayout>
</RelativeLayout>